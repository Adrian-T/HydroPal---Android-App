<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.a16kongs1.myapplication.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#2e536d"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            android:layout_weight="1" />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_main" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/box1"
        android:layout_marginTop="56sp"
        android:layout_height="56dp"
        android:background="#efeff4" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/box2"
        android:layout_marginTop="170sp"
        android:layout_height="1sp"
        android:background="#c8c8c8"
        tools:ignore="SmallSp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/box3"
        android:layout_marginTop="225sp"
        android:background="#efeff4"
        android:layout_height="125dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/box4"
        android:layout_marginTop="406sp"
        android:layout_height="1sp"
        android:background="#c8c8c8"
        tools:ignore="SmallSp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/box"
        android:layout_marginTop="463sp"
        android:layout_height="125sp"
        android:background="#efeff4" />


    <ToggleButton
        android:onClick="SwitchScreen"
        android:text="@string/button"
        android:layout_height="wrap_content"
        android:id="@+id/CustomWaterButton"
        android:layout_width="75dp"
        android:layout_marginTop="118sp"
        app:layout_anchor="@+id/Body"
        android:layout_marginLeft="290dp"
        tools:ignore="RtlHardcoded" />

    <ToggleButton
        android:onClick="TriggerLED"
        android:text="@string/button"
        android:layout_height="wrap_content"
        android:id="@+id/LEDButton"
        android:layout_width="75dp"
        android:layout_marginTop="354sp"
        app:layout_anchor="@+id/Body"
        android:layout_marginLeft="290dp"
        tools:ignore="RtlHardcoded" />

    <include layout="@layout/content_main"
        android:layout_height="420dp"
        android:id="@+id/Body"
        tools:ignore="IncludeLayoutParam" />

</android.support.design.widget.CoordinatorLayout>
